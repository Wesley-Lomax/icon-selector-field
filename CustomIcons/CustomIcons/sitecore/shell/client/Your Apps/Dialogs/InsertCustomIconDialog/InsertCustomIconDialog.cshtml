@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@using Sitecore.Web.UI.Controls.Common.UserControls
@model RenderingModel
@{
    var rendering = Html.Sitecore().Controls().GetUserControl(Model.Rendering);
    rendering.Class = "sc-InsertCustomIconDialog";
    rendering.Requires.Script("client", "InsertCustomIconDialog.js");

    var htmlAttributes = rendering.HtmlAttributes;
}

<div @htmlAttributes>

    <div class="sc-tile-default">
        <div class="sc-tile-default-property">
            <span class="sc-tile-property-value" data-bind="text: $displayName"></span>
        </div>
        <div class="sc-tile-default-property">
            <span class="sc-tile-property-value">
                <i data-bind="css: CssClass"></i>
            </span>
        </div>
    </div>
</div>